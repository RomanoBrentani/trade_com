{% extends 'base.html.twig' %}

{% block title %}Hello SecurityController!{% endblock %}

{% block stylesheets %}
    {{ encore_entry_link_tags('login') }}
{% endblock %}
{% block javascripts %}
    {{ encore_entry_script_tags('login') }}
{% endblock %}

{% block body %}
    <div class="d-flex justify-content-center align-items-center">
        <div class="w-50">
            <div class=" shadow p-3 mb-5 rounded card login-container">
                <h2 class="text-center mt-3">Sign in</h2>
                {% if error %}
                    <di class=" mr-3 ml-3 mt-3 mb-3 alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</di>
                {% endif %}
                <div class="card-body">
                    <form method="post">
                        <div class="mb-3 form-group">
                            <label for="email"><p>Email</p></label>
                            <input type="email" name="email" class="form-control" id="email" value="{{last_username}}"
                                   aria-describedby="emailHelp" placeholder="Enter your email here">
                            <small id="emailHelp" class="form-text text-muted">We'll never share your email with anyone
                                else.</small>
                        </div>
                        <div class=" mb-3 form-group">
                            <label for="password"><p>Password</p></label>
                            <input type="password" name="password" class="form-control" id="password"
                                   placeholder="enter your password here">
                        </div>
                        <div class="form-check mb-5">
                            <label>
                                <input type="checkbox" class="form-check-input" name="_remember_me">Remember me
                            </label>
                        </div>

                        <div class="mb-3 form-group">
                            <button type="submit" class=" submit-button btn btn-primary">Login</button>
                        </div>
                        <input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">
                    </form>
                </div>
                <div>
                    <p style="display: inline">No Account yet?</p><a href="{{ path('app_register') }}"> Register now</a>
                </div>
            </div>
        </div>
    </div>

{% endblock %}
