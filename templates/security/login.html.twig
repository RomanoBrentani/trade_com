{% extends 'base.html.twig' %}

{% block title %}Hello SecurityController!{% endblock %}

{% block stylesheets %}
    {{ encore_entry_link_tags('login') }}
{% endblock %}
{% block javascripts %}
    {{ encore_entry_script_tags('login') }}
{% endblock %}

{% block body %}
    <div class="col-md-6 ">
        <div class="container">
            <div class="card login-container">
                <h2 class="text-center mt-3">Sign in</h2>
                {% if error %}
                    <di class=" mr-3 ml-3 mt-3 mb-3 alert alert-danger">{{error.messageKey|trans(error.messageData, 'security')}}</di>
                {%endif%}
                <div class="card-body">
                    <form method="post">
                        <div class="mb-3 form-group">
                            <label for="email"><p>Email</p></label>
                            <input type="email" name="email" class="form-control" id="email"
                                   aria-describedby="emailHelp" placeholder="Enter email">
                            <small id="emailHelp" class="form-text text-muted">We'll never share your email with anyone
                                else.</small>
                        </div>
                        <div class=" mb-5 form-group">
                            <label for="password"><p>Password</p></label>
                            <input type="password" name="password" class="form-control" id="password"
                                   placeholder="Password">
                        </div>

                        <div class ="mb-3 form-group">
                            <button type="submit" class=" submit-button btn btn-primary">Submit</button>
                        </div>
                    </form>
                </div>
                <a href="{{ path('app_login') }}"></a>
                <a href="#">No Account yet? Regiter now</a>
            </div>
        </div>
    </div>

{% endblock %}
