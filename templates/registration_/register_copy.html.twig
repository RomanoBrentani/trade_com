{% extends 'base.html.twig' %}

{% block title %}{% endblock %}

{% block body %}

    <div class=" mt-3 d-flex justify-content-center align-items-center">
        <div class="w-50">
            <div class=" shadow p-3 mb-5 rounded card login-container">
                <h2 class="text-center mt-3">Sign up</h2>
                <div class="card-body">
                    <form>
                        <div class="mb-3 form-group">
                            <label for="email"><p>{{ 'label.email'| trans}}</p></label>
                            <input type="email" name="email" class="form-control" id="email"
                                   aria-describedby="emailHelp">
                            <small id="emailHelp" class="form-text text-muted">We'll never share your email with anyone
                                else.</small>
                        </div>
                        <div class=" mb-3 form-group">
                            <label for="firstName"><p>first name</p></label>
                            <input type="text" name="firstName" class="form-control" id="firstName"
                                   placeholder="enter your first name here">
                        </div>
                        <div class=" mb-3 form-group">
                            <label for="lastName"><p>last name</p></label>
                            <input type="text" name="lastName" class="form-control" id="lastName"
                                   placeholder="enter your last name here">
                        </div>
                        <div class=" mb-3 form-group">
                            <label for="password"><p>Password</p></label>
                            <input type="password" name="password" class="form-control" id="password"
                                   placeholder="enter your password here">
                        </div>

                        <div class="mb-3 form-group">
                            <button type="submit" class=" submit-button btn btn-primary">Sign up</button>
                        </div>
                    </form>
                </div>
                <div>
                    <p style="display: inline">Already have an account?</p><a href="{{ path('app_login') }}"> Sign in
                        now</a>
                </div>
            </div>
        </div>
    </div>


{% endblock %}
