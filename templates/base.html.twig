<!DOCTYPE html>
<html>
<head>
    <meta charset="UTF-8">
    <title>{% block title %}Welcome!{% endblock %}</title>
    <link rel="icon"
          href="data:image/svg+xml,<svg xmlns=%22http://www.w3.org/2000/svg%22 viewBox=%220 0 128 128%22><text y=%221.2em%22 font-size=%2296%22>⚫️</text></svg>">
    {# Run `composer require symfony/webpack-encore-bundle` to start using Symfony UX #}
    {% block stylesheets %}
        {{ encore_entry_link_tags('app') }}
    {% endblock %}

    {% block javascripts %}
        {{ encore_entry_script_tags('app') }}
    {% endblock %}
</head>
<header>
    {% if is_granted('IS_AUTHENTICATED_FULLY') %}
        <div class="nav-container">
            <nav class="nav-container navbar navbar-expand-lg bg-light">
                <form class="mx-sm-3">
                    <input class="form-control ml-3 mr-sm-2" type="text" placeholder="Search...">
                </form>
                <div class="collapse navbar-collapse">
                    <ul class="navbar-nav mr-auto">
                        <li class="mx-sm-3 nav-item">
                            <a href="{{ path('app_home') }}">Home</a>
                        </li>
                        <li class="nav-item">
                            <a>Products</a>
                        </li>
                        <li class="mx-sm-3 nav-item">
                            <a>Trades</a>
                        </li>

                    </ul>
                    <div class=" mx-sm-5 d-flex w-100 justify-content-end">
                        <div class="nav-item dropdown">
                            <a class="nav-link dropdown-toggle" id="navbarDropdown" role="button"
                               data-bs-toggle="dropdown" aria-expanded="false">My Account</a>
                            <div class="dropdown-menu" aria-labelledby="navbarDropdown">
                                <a href="{{ path('app_logout') }}" class="dropdown-item">Sign out</a>
                                <a href="{{ path('app_account') }}" class="dropdown-item">Profile
                                </a>

                            </div>
                        </div>
                    </div>
                </div>
            </nav>
        </div>
    {% endif %}
</header>
<body>
{% block body %}{% endblock %}
</body>
</html>
